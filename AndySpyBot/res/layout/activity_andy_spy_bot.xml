<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndySpyBot" >

    <EditText
        android:id="@+id/etSendIP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textUri|numberDecimal" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="50dp" />

    <ToggleButton
        android:id="@+id/tbtnSpyMode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSendIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textOff="SpyMode OFF"
        android:textOn="SpyMode ON" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etSendIP"
        android:layout_centerHorizontal="true"
        android:text="Set Receiver IP Address"
        tools:ignore="HardcodedText" />

</RelativeLayout>